# Server Environment Configuration
# Copy this to .env and fill in your values

# Node/Express Configuration
NODE_ENV=development
PORT=3000

# Local Models Service URL
# For Docker: http://local-models-service:8000
# For local dev: http://localhost:8000
LOCAL_MODELS_SERVICE_URL=http://localhost:8000

# Backend Selection
# Set to "true" to use local models service
# Set to "false" to use Google Cloud (requires Google credentials in .env)
USE_LOCAL_BACKEND=true

# ===== Google Cloud Configuration (optional, if USE_LOCAL_BACKEND=false) =====
# Only needed if you're using Google Cloud backend
# GOOGLE_API_KEY=your-google-api-key
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_CLOUD_LOCATION=us-central1

# ===== Logging =====
LOG_LEVEL=info
